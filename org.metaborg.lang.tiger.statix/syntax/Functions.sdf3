module Functions

imports Base

sorts FunDec FArg
context-free syntax

  Dec.FunDecs = <<{FunDec "\n"}+>> {longest-match}
  
  FunDec.ProcDec = <
    function <Occ>(<{FArg ", "}*>) = 
      <Exp>
  >
  
  FunDec.FunDec = <
    function <Occ>(<{FArg ", "}*>) : <Type> = 
      <Exp>
  >

  FArg.FArg = <<Occ> : <Type>>
  
  Exp.Call = <<Occ>(<{Exp ", "}*>)>   
