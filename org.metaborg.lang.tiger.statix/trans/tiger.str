module tiger

imports

  completion/completion
  pp
  outline
  analysis
  injections/Tiger-injections

rules // Debugging

  debug-show-aterm:
    (node, _, _, path, project-path) -> (filename, result)
    with
      filename := <guarantee-extension(|"aterm")> path
    ; result   := node

  debug-upgrade-placeholders:
    (node, _, _, path, project-path) -> (filename, result)
    with
      filename := <guarantee-extension(|"aterm")> path
    ; result   := <upgrade-placeholders-Tiger> node